{
    "name": "pixielity/laravel-discovery",
    "description": "Powerful class discovery system for Laravel with attribute-based scanning, directory traversal, and monorepo support",
    "keywords": [
        "laravel",
        "discovery",
        "class-discovery",
        "attribute",
        "reflection",
        "monorepo",
        "composer",
        "php8",
        "dependency-injection"
    ],
    "homepage": "https://github.com/pixielity-co/laravel-discovery",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Pixielity Team",
            "email": "dev@pixielity.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "symfony/finder": "^7.0",
        "illuminate/container": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0",
        "laravel/prompts": "^0.3.12",
        "olvlvl/composer-attribute-collector": "^2.1"
    },
    "require-dev": {
        "larastan/larastan": "^3.9",
        "laravel/pint": "^1.27",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^9.0|^10.0",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Pixielity\\Discovery\\": "src/"
        },
        "files": [
            "vendor/attributes.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Pixielity\\Discovery\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan analyse",
                "format": [
            "@php vendor/bin/pint --ansi",
            "@php vendor/bin/phpstan analyse --verbose --ansi"
        ],
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "aliases": {
                "Discovery": "Pixielity\\Discovery\\Facades\\Discovery"
            }
        },
        "composer-attribute-collector": {
            "include": [
                "src",
                "tests/Fixtures"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true,
            "olvlvl/composer-attribute-collector": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist"
    }
}
