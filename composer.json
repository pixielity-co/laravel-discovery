{
  "name": "pixielity/laravel-discovery",
  "description": "Powerful class discovery system for Laravel with attribute-based scanning, directory traversal, and monorepo support",
  "keywords": [
    "laravel",
    "discovery",
    "class-discovery",
    "attribute",
    "reflection",
    "monorepo",
    "composer",
    "php8",
    "dependency-injection"
  ],
  "homepage": "https://github.com/pixielity/laravel-discovery",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Pixielity Team",
      "email": "dev@pixielity.com"
    }
  ],
  "require": {
    "php": "^8.3",
    "illuminate/container": "^11.0|^12.0",
    "illuminate/support": "^11.0|^12.0",
    "laravel/prompts": "^0.3.12",
    "olvlvl/composer-attribute-collector": "^2.1",
    "symfony/finder": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "orchestra/testbench": "^9.0|^10.0",
    "mockery/mockery": "^1.6",
    "phpstan/phpstan": "^1.10 || ^2.0"
  },
  "autoload": {
    "psr-4": {
      "Pixielity\\Discovery\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pixielity\\Discovery\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
    "analyse": "vendor/bin/phpstan analyse",
    "format": "vendor/bin/pint"
  },
  "extra": {
    "laravel": {
      "aliases": {
        "Discovery": "Pixielity\\Discovery\\Facades\\Discovery"
      }
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": true,
      "olvlvl/composer-attribute-collector": true
    },
    "optimize-autoloader": true,
    "preferred-install": "dist"
  }
}
